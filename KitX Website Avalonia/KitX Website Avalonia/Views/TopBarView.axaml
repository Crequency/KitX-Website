<UserControl x:Class="KitX_Website_Avalonia.Views.TopBarView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="250"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Panel>
        <Border Background="{DynamicResource AppThemeColor}"/>
        <DockPanel VerticalAlignment="Top">
            <StackPanel Height="68"
                        DockPanel.Dock="Left"
                        Orientation="Horizontal">
                <Image Width="48"
                       Height="48"
                       Margin="10"
                       Source="/Assets/KitX-Icon-256x-margin-2x.png"/>

            </StackPanel>
            <Border/>
        </DockPanel>
    </Panel>
</UserControl>
